<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="model"
            type="www.rxfamilyuser.com.coom.circle.Bean.CircleBean.DataBean"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120px"
                android:layout_height="120px"
                android:layout_margin="20px"
                android:src="@mipmap/default_user"
                app:imageUrl="@{model.user_photo}"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40px"
                android:layout_marginTop="20px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="@{model.user_name}"
                    android:textColor="@color/circle_name"
                    android:textSize="@dimen/_px26" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="@{model.invitation_title}"
                    android:textColor="@color/circle_title"
                    android:textSize="@dimen/_px34" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="@{model.invitation_content}"
                    android:textColor="@color/circle_context"
                    android:textSize="@dimen/_px28" />

                <ImageView
                    android:id="@+id/iv_phtot_circle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:src="@mipmap/image_def"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@{model.invitation_time}"
                        android:textColor="@color/circle_context"
                        android:textSize="@dimen/_px28" />

                    <TextView
                        android:id="@+id/tv_reply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="@{model.invitation_number}"
                        android:textColor="@color/circle_context"
                        android:textSize="@dimen/_px28" />

                    <ImageView
                        android:layout_width="47px"
                        android:layout_height="47px"
                        android:layout_toLeftOf="@+id/tv_reply"
                        android:src="@mipmap/commemt" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/view_line"
            android:layout_marginTop="50px" />
    </LinearLayout>
</layout>