    <style name="autoTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_edit_bj_selector</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">@color/login_view</item>
        <item name="android:textCursorDrawable">@drawable/login_input_cursor_shape</item>
        <item name="android:textSize">@dimen/_px30</item>

    </style>

    <style name="reg_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/register_edit_bj_selector</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/register_input_cursor_shape</item>
        <item name="android:textSize">@dimen/_px28</item>

        <!-- android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/register_edit_bj_selector"
                                    android:inputType="textPersonName"
                                    android:paddingBottom="4px"
                                    android:textColor="@color/white"
                                    android:textCursorDrawable="@drawable/register_input_cursor_shape"
                                    android:textSize="@dimen/_px28"-->
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">false</item>

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="view_line">
        <item name="android:background">@color/view_line</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>

    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_px30</item>
    </style>

    <!--pop显示隐藏动画-->
    <style name="PopupAnimaFade" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/basepopup_fade_in</item>
        <item name="android:windowExitAnimation">@anim/basepopup_fade_out</item>
    </style>

</resources>
